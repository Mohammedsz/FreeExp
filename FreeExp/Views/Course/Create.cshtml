@model FreeExp.Models.Course
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Add", "Course", FormMethod.Post,  new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Department, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.DepartmentId, new SelectList(ViewBag.departments, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DepartmentId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Duration, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Duration, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Duration)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Requirments, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Requirments, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Requirments)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Level, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Level, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Level)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Lectures, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Lectures, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Lectures)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Image</label>
        <div class="col-md-10">
            <input type="file" class="form-control-file" />
        </div>
    </div>
    <input type="submit" class="form-control" />
}
